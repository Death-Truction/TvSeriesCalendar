<UserControl x:Class="TvSeriesCalendar.Views.SeriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:v="clr-namespace:TvSeriesCalendar.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="LightGray">
            <ListView ItemsSource="{Binding Series}" SelectedItem="{Binding SelectedSeries}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <v:SeriesButtonView/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
    <v:SeriesDetailedView Visibility="{Binding SelectedSeries, Converter={StaticResource SelectedSeriesToVisibility}}" d:IsHidden="True"/>
    </Grid>
</UserControl>