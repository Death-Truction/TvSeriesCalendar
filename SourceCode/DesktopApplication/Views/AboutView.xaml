<UserControl x:Class="TvSeriesCalendar.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TvSeriesCalendar.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="40" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="pack://application:,,,/Resources/TvSeriesCalendar.ico"/>
        <TextBlock Grid.Row="1" Text="TvSeriesCalendar" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="30" Foreground="White"></TextBlock>
        <TextBlock Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20">
            <Hyperlink Command="{Binding OpenWebsiteCommand}" CommandParameter="https://github.com/Death-Truction/TvSeriesCalendar">
                Find more Information about the Project
            </Hyperlink>
        </TextBlock>
        <TextBlock Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20">
            <Hyperlink Command="{Binding OpenWebsiteCommand}" CommandParameter="https://github.com/Death-Truction/TvSeriesCalendar/blob/master/LICENSE">
                License
            </Hyperlink>

        </TextBlock>
        <TextBlock Grid.Row="7" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20">
            <Hyperlink Command="{Binding OpenWebsiteCommand}" CommandParameter="https://github.com/Death-Truction/TvSeriesCalendar/blob/master/SourceCode/DesktopApplication/ThirdPartyNotices.md">
                Third Party Notice
            </Hyperlink>

        </TextBlock>
    </Grid>
</UserControl>